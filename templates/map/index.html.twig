{% extends 'base.html.twig' %}

{% block title %}Hríbiky{% endblock %}

{% block navbarbrand %}{{ count }} hríbikov{% endblock %}

{% block ogtags %}
    <meta property="og:title" content="Hríbiky.sk"/>
    <meta property="og:type" content="website"/>
    <meta property="og:url" content="{{ url('app_home') }}"/>
    <meta property="og:image" content="{{ absolute_url(asset('uploads/photos/' ~ randomRozcestnik.photos.0.path)) }}" />
    <meta property="og:description" content="Hríbiky sú turistické rozcestníky."/>
    <meta property="og:site_name" content="Hríbiky.sk"/>
{% endblock %}

{% block body %}
    <div class="container mt-3">
        <div id="map" style="height: 80vh;"></div>
    </div>

    {% include 'map/modal.html.twig' %}

{% endblock %}

{% block javascripts %}
    <script>
        // Twig prepis JSON dát z PHP
        const hribiky = {{ hribiky|raw }};
    </script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
{% endblock %}
