{# templates/emails/base.html.twig #}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <style>
        body { margin: 0; padding: 0; background: #f5f6fa; font-family: sans-serif; color: #333; }
        .email-container { max-width: 600px; margin: 40px auto; background: white; border-radius: 10px; overflow: hidden; }
        .header { background: #007bff; color: white; padding: 20px; text-align: center; font-size: 22px; }
        .content { padding: 30px; line-height: 1.6; font-size: 16px; }
        .footer { font-size: 13px; color: #888; text-align: center; padding: 15px; background: #f1f1f1; }
        a.button {
            background: #007bff; color: white !important;
            padding: 10px 18px; border-radius: 6px;
            text-decoration: none; display: inline-block; margin-top: 10px;
        }
    </style>
</head>
<body>
<div class="email-container">
    <div class="header">{% block header %}{% endblock %}</div>
    <div class="content">
        {% block body %}{% endblock %}
    </div>
    <div class="footer">
        &copy; {{ "now"|date("Y") }} <a href="https://hribiky.sk">Hríbiky.sk</a>. Všetky práva vyhradené.
    </div>
</div>
</body>
</html>
