{% extends 'base.html.twig' %}

{% block title %}{{ 'error404.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">

                <h1 class="display-1 text-muted">404</h1>
                <h2 class="mb-4">{{ 'error404'|trans }}</h2>

                {% if mushroom %}
                    <div class="mt-5">
                        <h4 class="mb-4">{{ 'error404.but'|trans }}</h4>

                        <div class="card shadow-sm mx-auto" style="max-width: 600px;">
                            {% set photo = mushroom.photos|first %}
                            {% if photo %}
                                <img src="{{ asset('uploads/photos/' ~ photo.path) }}"
                                     class="card-img-top"
                                     alt="{{ mushroom.title }}"
                                     style="max-height: 400px; object-fit: cover;">
                            {% endif %}

                            <div class="card-body">
                                <h5 class="card-title">{{ mushroom.title }}</h5>

                                <div class="mt-3">
                                    <code>{{ mushroom.latitude }}, {{ mushroom.longitude }}</code>
                                </div>

                                <div class="mt-4">
                                    <a href="{{ path('mushroom_detail', {id: mushroom.id}) }}" class="btn btn-primary">
                                        {{ 'error404.detail'|trans }}
                                    </a>
                                    <a href="{{ path('app_home') }}" class="btn btn-secondary">
                                        {{ 'back_to_map'|trans }}
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="mt-5">
                        <p class="text-muted">{{ 'no_mushrooms_to_display'|trans }}</p>
                        <a href="{{ path('app_home') }}" class="btn btn-primary">
                            {{ 'back_to_homepage'|trans }}
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
