{% extends 'base.html.twig' %}

{% block title %}{{ 'leaderboard.title'|trans }}{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">

                <div class="d-flex align-items-center mb-4">
                    <h1 class="h3 mb-0 me-3">{{ 'leaderboard.heading'|trans }}</h1>
                    <span class="badge bg-success">{{ 'leaderboard.subheading'|trans }}</span>
                </div>

                {% if contributors is empty %}
                    <div class="alert alert-info">
                        {{ 'leaderboard.empty'|trans }}
                    </div>
                {% else %}
                    <ol class="list-group list-group-numbered shadow-sm">
                        {% for user in contributors %}
                            {% set rank = loop.index %}
                            {% set medal = rank == 1 ? 'ðŸ¥‡' : (rank == 2 ? 'ðŸ¥ˆ' : (rank == 3 ? 'ðŸ¥‰' : '')) %}

                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <div class="me-3 fs-4">{{ medal }}</div>

                                    <div>
                                        <div class="fw-semibold">
                                            {{ user.name ?: 'leaderboard.unknown_user'|trans }}
                                            {% if user.hasRole is defined and user.hasRole('ROLE_RELIABLE') %}
                                                <span class="badge bg-warning text-dark ms-2">{{ 'leaderboard.reliable'|trans }}</span>
                                            {% endif %}
                                        </div>
                                        <div class="text-muted small">
                                            {{ 'leaderboard.count'|trans({'%count%': user.mushroomCount}) }}
                                        </div>
                                    </div>
                                </div>

                                <span class="badge bg-primary rounded-pill px-3 py-2">
                {{ user.mushroomCount }}
              </span>
                            </li>
                        {% endfor %}
                    </ol>
                {% endif %}

                <div class="text-muted small mt-3">
                    <p>{{ 'leaderboard.note1'|trans }}</p>
                    <p>{{ 'leaderboard.note2'|trans }}</p>
                </div>

            </div>
        </div>
    </div>
{% endblock %}

